<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.casuals.tlou.cvlab.stream.LiveStream">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageview_livestream_canvas"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextureView
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:id="@+id/textureview_livestream_preview"
        android:layout_alignTop="@+id/imageview_livestream_canvas"
        android:layout_alignStart="@+id/imageview_livestream_canvas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Batch"
        android:id="@+id/button_livestream_loadbatch"
        android:textColor="#FFFFFF"
        android:background="#66000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button_livestream_back"
        android:textColor="#FFFFFF"
        android:background="#66000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
